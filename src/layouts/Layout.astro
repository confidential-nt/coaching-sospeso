---
import TopNavigation from "@/components/TopNavigation.astro";
import { ViewTransitions } from "astro:transitions";
import { ToastifyToastContainer } from "@/adapters/toastApi.tsx";
import "../index.css";
import "react-toastify/dist/ReactToastify.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html data-theme="lofi" lang="ko-kr">
  <head>
    <meta charset="UTF-8" />
    <meta content="Astro description" name="description" />
    <meta content="width=device-width" name="viewport" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content={Astro.generator} name="generator" />
    <title>{title}</title>
    <link
      rel="stylesheet"
      as="style"
      crossorigin
      href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable-dynamic-subset.min.css"
    />
    <script
      is:inline
      defer
      src="https://umami.life-lifter.com/script.js"
      data-website-id="fb529fdb-c507-417a-ac37-9bef2965f7cc"></script>
    <ViewTransitions />
  </head>
  <body class="bg-base-200 min-h-screen pb-8">
    <TopNavigation />
    <slot />
    <ToastifyToastContainer
      client:load
      closeOnClick
      autoClose={5000}
      hideProgressBar={true}
      closeButton={false}
      theme=""
    />
  </body>
</html>
