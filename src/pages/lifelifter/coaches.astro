---
import { getEntry } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import "@/styles/content.css";
import { sanitize } from '@/adapters/sanitizeHtml';

const { data } = (await getEntry("coaches", "coaches")) ?? {
  data: { content: "" },
};

const html = sanitize(data.content);

export const prerender = true;
---

<Layout title="코칭 소스페소 : 코치들 소개">
  <main class="card bg-base-100 shadow-xl p-8 m-auto max-w-xl mt-4 content">
    {/* eslint-disable-next-line astro/no-set-html-directive */}
    <article set:html={html} />
  </main>
</Layout>
